{{!< default}}

<div class="container">
    <div class="row">
        <div class="content-column col-lg-8 shift">
            <div class="content-area">
                <main class="site-main">
                    {{#post}}
                        <article
                            class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single u-shadow">
                            {{> post-header tag="h1" hide_link=true}}
                            {{> post-media with_caption=true}}
                            <div class="post-wrapper">
                                <div class="post-content gh-content">
                                    {{content}}
                                </div>
                            </div>
                        </article>
                    {{/post}}
                </main>
            </div>
        </div>
    </div>
</div>