{{!< default}}

<div class="container">
    {{#author}}
        <div class="term-author">
            <div class="author-image-placeholder u-placeholder">
                <img
                    class="author-image u-object-fit"
                    src="{{img_url profile_image size="xs"}}"
                    alt="{{name}}"
                    loading="lazy"
                >
            </div>
            <h1 class="author-name">{{name}}</h1>
        </div>
    {{/author}}
    {{> list}}
</div>