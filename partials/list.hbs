<div class="row">
    <div class="content-column col-xl-9 col-lg-8">
        <div class="content-area">
            <main class="site-main">
                <div class="post-feed">
                    <div class="row">
                        {{#foreach posts}}
                            <div class="post-column col-xl-4 col-md-6">
                                {{> "loop"}}
                            </div>
                        {{/foreach}}
                    </div>
                </div>
                {{pagination}}
            </main>
        </div>
    </div>
    <div class="sidebar-column col-xl-3 col-lg-4 hidden-xs hidden-sm hidden-md">
        {{> widgets/widgets}}
    </div>
</div>