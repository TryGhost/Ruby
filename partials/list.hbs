<div class="row">
    <div class="content-column {{#if @custom.show_sidebar_on_homepage}}col-xl-9 col-lg-8{{/if}}">
        <div class="content-area">
            <main class="site-main">
                <div class="post-feed">
                    <div class="row">
                        {{#foreach posts}}
                            <div class="post-column col-xl-4 col-md-6">
                                {{> "loop"}}
                            </div>
                        {{/foreach}}
                    </div>
                </div>
                {{pagination}}
            </main>
        </div>
    </div>
    {{#if @custom.show_sidebar_on_homepage}}
        <div class="sidebar-column col-xl-3 col-lg-4 hidden-xs hidden-sm hidden-md">
            {{> widgets/widgets}}
        </div>
    {{/if}}
</div>