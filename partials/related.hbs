{{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}"
    include="tags,authors" as |related|}}
    {{#if related}}
        <section class="related-posts">
            <h3 class="related-title">
                <span class="text">Может понравиться...</span>
            </h3>
            <div class="post-feed">
                {{#foreach related visibility="all"}}
                    {{> loop}}
                {{/foreach}}
            </div>
        </section>
    {{/if}}
{{/get}}